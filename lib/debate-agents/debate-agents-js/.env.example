# Multi-Agent Trading System - Environment Configuration
# Copy this file to .env and fill in your API keys

# ====================
# REQUIRED API KEYS
# ====================

# Google Gemini API Key (Required)
# Get from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Finnhub API Key (Required for market data)
# Get from: https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Tavily API Key (Required for news/web search)
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# ====================
# OPTIONAL API KEYS
# ====================

# EODHD API Key (Optional - High quality international data)
# Get from: https://eodhistoricaldata.com/
EODHD_API_KEY=your_eodhd_api_key_here

# OpenAI API Key (Optional - For consultant cross-validation)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# ====================
# MODEL CONFIGURATION
# ====================

# Deep thinking model (for Research Manager, Portfolio Manager)
DEEP_MODEL=gemini-3-pro-preview

# Quick thinking model (for analysts, researchers)
QUICK_MODEL=gemini-2.0-flash

# Consultant models (OpenAI)
CONSULTANT_MODEL=gpt-4o
CONSULTANT_QUICK_MODEL=gpt-4o-mini

# ====================
# RATE LIMITING
# ====================

# Gemini RPM Limit
# Free tier: 15 RPM
# Paid tier (Tier 1): 360 RPM
# Paid tier (Tier 2): 1000+ RPM
GEMINI_RPM_LIMIT=15

# ====================
# FEATURES
# ====================

# Enable/disable persistent memory (ChromaDB)
ENABLE_MEMORY=true

# Enable/disable consultant cross-validation (requires OpenAI API key)
ENABLE_CONSULTANT=true

# Enable/disable online tools (news, sentiment, etc.)
ONLINE_TOOLS=true

# ====================
# DEBATE CONFIGURATION
# ====================

# Maximum rounds of bull/bear debate
MAX_DEBATE_ROUNDS=2

# Maximum rounds of risk discussion
MAX_RISK_DISCUSS_ROUNDS=1

# ====================
# RISK MANAGEMENT
# ====================

# Maximum position size (as fraction of capital, e.g., 0.1 = 10%)
MAX_POSITION_SIZE=0.1

# Maximum daily trades
MAX_DAILY_TRADES=5

# Risk-free rate (for calculations)
RISK_FREE_RATE=0.03

# ====================
# API SETTINGS
# ====================

# API timeout in seconds
API_TIMEOUT=300

# API retry attempts
API_RETRY_ATTEMPTS=10

# ====================
# STORAGE
# ====================

# Results directory
RESULTS_DIR=./results

# Data cache directory
DATA_CACHE_DIR=./data_cache

# ChromaDB persist directory
CHROMA_PERSIST_DIR=./chroma_db

# ====================
# LANGSMITH (OPTIONAL)
# ====================

# LangSmith API key (for tracing/debugging)
# Get from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Enable LangSmith tracing
LANGSMITH_TRACING=true

# LangSmith project name
LANGSMITH_PROJECT=Deep-Trading-System-Gemini3-JS

# LangSmith endpoint
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ====================
# LOGGING
# ====================

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Quiet mode (minimal output)
QUIET_MODE=false

# ====================
# MISC
# ====================

# Default ticker (for testing)
DEFAULT_TICKER=AAPL

# Environment (dev, staging, production)
ENVIRONMENT=dev

# Prompts directory (for custom prompts)
PROMPTS_DIR=../prompts
